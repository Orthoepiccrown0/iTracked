<resources>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
    </style>

    <style name="Username_error_appearance" parent="@android:style/TextAppearance">
        <item name="android:textColor">@color/red_warning</item>
        <item name="android:colorControlActivated">@color/red_warning</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="Username_okay_appearance" parent="@android:style/TextAppearance">
        <item name="android:textColor">@color/confirmcolor</item>
        <item name="android:colorControlActivated">@color/confirmcolor</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="Username_checking_appearance" parent="@android:style/TextAppearance">
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:colorControlActivated">@color/colorPrimary</item>
        <item name="android:textSize">14sp</item>
    </style>
</resources>
