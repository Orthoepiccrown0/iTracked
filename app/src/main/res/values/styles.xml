<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="Edittext" parent="Theme.AppCompat.Light">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/nice_grey</item>

        <item name="colorControlActivated">@color/nice_grey</item>
        <item name="colorControlHighlight">@color/nice_grey</item>

    </style>

    <style name="Edittext.register" parent="Theme.AppCompat.Light">
        <!-- Customize your theme here. -->

        <item name="colorControlActivated">@android:color/darker_gray</item>
        <item name="colorControlHighlight">@android:color/darker_gray</item>

    </style>

    <style name="Edittext_names" parent="Theme.AppCompat.Light">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/cardview_light_background</item>
        <item name="colorPrimaryDark">@color/cardview_light_background</item>
        <item name="colorAccent">@color/niceyellow</item>

        <item name="colorControlActivated">@color/niceyellow</item>
        <item name="colorControlHighlight">@color/niceyellow</item>

    </style>

    <style name="Username_error_appearance" parent="@android:style/TextAppearance">
        <item name="android:textColor">@color/red_warning</item>
        <item name="android:colorControlActivated">@color/red_warning</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="Username_okay_appearance" parent="@android:style/TextAppearance">
        <item name="android:textColor">@color/confirmcolor</item>
        <item name="android:colorControlActivated">@color/confirmcolor</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="Username_checking_appearance" parent="@android:style/TextAppearance">
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:colorControlActivated">@color/colorPrimary</item>
        <item name="android:textSize">14sp</item>
    </style>

</resources>
